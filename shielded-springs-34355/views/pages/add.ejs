                      <label class="labelc2">Fight:</label>
                        <input type="range" id="fightVal" name="fightRange" min="0" max="100" value="0" oninput="this.form.fightInput.value=this.value" />
                        <input type="number" id="fightVal" name="fightInput" min="0" max="100" value="0" oninput="this.form.fightRange.value=this.value" /><br><br>

                      <label class="labelc3">Fire:</label>
                        <input type="range" id="fireVal" name="fireRange" min="0" max="100" value="0" oninput="this.form.fireInput.value=this.value" />
                        <input type="number" id="fireVal" name="fireInput" min="0" max="100" value="0" oninput="this.form.fireRange.value=this.value" /><br><br>

                      <label class="labelc4">Water:</label>
                        <input type="range" id="waterVal" name="waterRange" min="0" max="100" value="0" oninput="this.form.waterInput.value=this.value" />
                        <input type="number" id="waterVal" name="waterInput" min="0" max="100" value="0" oninput="this.form.waterRange.value=this.value" /><br><br>

                      <label class="labelc5">Electric:</label>
                        <input type="range" id="elecVal" name="elecRange" min="0" max="100" value="0" oninput="this.form.elecInput.value=this.value" />
                        <input type="number" id="elecVal" name="elecInput" min="0" max="100" value="0" oninput="this.form.elecRange.value=this.value" /><br><br>

                      <label class="labelc6">Ice:</label>
                        <input type="range" id="iceVal" name="iceRange" min="0" max="100" value="0" oninput="this.form.iceInput.value=this.value" />
                        <input type="number" id="iceVal" name="iceInput" min="0" max="100" value="0" oninput="this.form.iceRange.value=this.value" /><br><br>

                      <label class="labelGreen">Trainer Name:</label>
                          <input type="text" id="tmTrainer" name="tmTrainer" class="tboxes"><br><br>

                      <label class="labelGreen">Creature Type:</label>
                              <select id="cType">
                              <option value="Beast">Beast</option>
                              <option value="Bird">Bird</option>
                              <option value="Bug">Bug</option>
                              <option value="Fish">Fish</option>
                              <option value="Ghost">Ghost</option>
                              <option value="Monster">Monster</option>
                              <option value="Mystic">Mystic</option>
                              <option value="Undead">Undead</option>
                              </select>

                      <br><br><label class="labelGreen">Alignment:</label>
                      <select id="align1">
                      <option value="Lawful ">Lawful</option>
                      <option value="Neutral ">Neutral</option>
                      <option value="Chaotic ">Chaotic</option>
